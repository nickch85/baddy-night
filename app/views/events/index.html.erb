<div class="row">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li class="active">
        <a href="/events">Events</a>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-offset-6 col-md-6">
    <%= link_to 'New Event', new_event_path, class: 'btn btn-success pull-right' %>
  </div>
</div>

<%= will_paginate @event, :class => 'pagination', :style => 'margin:0' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, [event] %></td>
        <td><%= event.event_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @event, :class => 'pagination', :style => 'margin:0' %>

