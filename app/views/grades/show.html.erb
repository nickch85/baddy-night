<div class="row">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li>
        <a href="/grades">Grades</a>
      </li>
      <li class="active"><%= @grade.name %></li>
    </ul>
  </div>
</div>

<h1>
  Grade <%= @grade.name %>
</h1>
<div class="row">
  <div class="col-xs-6">
    <%= link_to 'Back', grades_path, class: 'btn btn-default'  %>
    <%= link_to 'Edit', edit_grade_path(@grade), class: 'btn btn-warning' %>
  </div>
  <div class="col-xs-6 text-right">
    <%= link_to @grade, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
      <%= glyphicon(:trash) %> Delete
    <% end %>
  </div>
</div>

<h2>Players</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @grade.players.each do |player| %>
      <tr>
        <td><%= link_to highlight(player.full_name, @filter), [player] %></td>
        <td><%= highlight(player.email, @filter) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
